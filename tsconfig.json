{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": false,
        "target": "es2017",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true
    },
    "include": [
        "./src/**/*"
    ]
}